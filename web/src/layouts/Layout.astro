---
import { BASE_URL } from "../shared/shared-constants"

const baseUrl = BASE_URL;//Astro.site;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={baseUrl+"/favicon.svg"} />
		<meta name="generator" content={Astro.generator} />

		<title>Mc Samuel Shoko Designs | Portfolio</title>
		<meta name="description" content="Website portfolio for designs by Mc Samuel Shoko" />
		<meta property="og:title" content="Mc Samuel Shoko Designs" />
		<meta property="og:description" content="Website portfolio for designs by Mc Samuel Shoko" />
		<meta name="theme-color" content="#ffffff" />
		<meta name="application-name" content="Mc Samuel Shoko Designs" />
		<link rel="icon" type="image/png" href={baseUrl+"/favicons/favicon-196x196.png"} sizes="196x196" />
		<link rel="icon" type="image/png" href={baseUrl+"/favicons/favicon-128x128.png"} sizes="128x128" />
		<link rel="icon" type="image/png" href={baseUrl+"/favicons/favicon-96x96.png"} sizes="96x96" />
		<link rel="icon" type="image/png" href={baseUrl+"/favicons/favicon-32x32.png"} sizes="32x32" />
		<link rel="icon" type="image/png" href={baseUrl+"/favicons/favicon-16x16.png"} sizes="16x16" />
		<link rel="apple-touch-icon" sizes="180x180" href={baseUrl+"/favicons/apple-touch-icon-180x180.png"} />
		<link rel="apple-touch-icon" sizes="192x192" href={baseUrl+"/favicons/apple-touch-icon-192x192.png"} />
		<link rel="apple-touch-icon" sizes="57x57" href={baseUrl+"/favicons/apple-touch-icon-57x57.png"} />
		<link rel="apple-touch-icon" sizes="60x60" href={baseUrl+"/favicons/apple-touch-icon-60x60.png"} />
		<link rel="apple-touch-icon" sizes="72x72" href={baseUrl+"/favicons/apple-touch-icon-72x72.png"} />
		<link rel="apple-touch-icon" sizes="76x76" href={baseUrl+"/favicons/apple-touch-icon-76x76.png"} />
		<link rel="apple-touch-icon" sizes="114x114" href={baseUrl+"/favicons/apple-touch-icon-114x114.png"} />
		<link rel="apple-touch-icon" sizes="120x120" href={baseUrl+"/favicons/apple-touch-icon-120x120.png"} />
		<link rel="apple-touch-icon" sizes="144x144" href={baseUrl+"/favicons/apple-touch-icon-144x144.png"} />
		<link rel="apple-touch-icon" sizes="152x152" href={baseUrl+"/favicons/apple-touch-icon-152x152.png"} />
		<link rel="manifest" href={baseUrl+"/favicons/site.webmanifest"} />
	</head>
	<body class="bg-primary/95 text-white overflow-x-hidden">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
